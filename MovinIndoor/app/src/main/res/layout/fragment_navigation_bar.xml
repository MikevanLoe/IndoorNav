<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1"
    android:background="#ebebeb"
    android:orientation="vertical">

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="140dp"
        android:background="#F08714"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:rowCount="5"
        android:columnCount="3"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/ic_my_location_white_36dp"
            android:layout_row="0"
            android:layout_column="0" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:src="@drawable/ic_place_white_36dp"
            android:layout_row="1"
            android:layout_column="0"
            android:backgroundTint="#F08714" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF"
            android:text="B0.50"
            android:layout_row="0"
            android:layout_column="1"
            android:singleLine="true"
            android:layout_marginRight="100dp"
            android:layout_gravity="left|right" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText2"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF"
            android:text="B0.41"
            android:layout_row="1"
            android:layout_column="1"
            android:singleLine="true"
            android:layout_marginRight="100dp"
            android:layout_gravity="left|right" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:id="@+id/btnCloseNav"
            android:onClick="btnCloseNavBar"
            android:layout_row="0"
            android:layout_column="2"
            android:src="@drawable/ic_close_white_24dp"
            android:layout_marginLeft="-100dp"
            android:backgroundTint="#fff08714" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Navigate"
            android:id="@+id/btnNavi2"
            android:onClick="btnNavigate"
            android:layout_row="1"
            android:layout_column="2"
            android:src="@drawable/ic_directions_white_24dp"
            android:layout_marginLeft="-100dp"
            android:backgroundTint="#F08714" />

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_row="4"
            android:layout_column="1"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton"
                android:checked="false" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton2"
                android:button="@drawable/ic_local_grocery_store_white_36dp"
                android:checked="false" />
        </RadioGroup>

    </GridLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/relat">

        <ExpandableListView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/expandableListView"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.01"
            android:background="#FFFFFF"
            android:choiceMode="singleChoice"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</LinearLayout>