<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#CCCCCC"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="260dp"
        android:background="#ff423fcc"
        android:paddingTop="60dp"
        android:paddingBottom="60dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

        <ImageView
            android:layout_width="@dimen/abc_action_bar_progress_bar_size"
            android:layout_height="@dimen/abc_action_bar_progress_bar_size"
            android:id="@+id/imageView"
            android:layout_gravity="left|top"
            android:src="@drawable/abc_btn_radio_to_on_mtrl_015" />

        <ImageView
            android:layout_width="@dimen/abc_action_bar_progress_bar_size"
            android:layout_height="@dimen/abc_action_bar_progress_bar_size"
            android:id="@+id/imageView2"
            android:layout_gravity="left|center_vertical"
            android:src="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha" />

        <ImageView
            android:layout_width="@dimen/abc_action_bar_progress_bar_size"
            android:layout_height="@dimen/abc_action_bar_progress_bar_size"
            android:id="@+id/imageView3"
            android:layout_gravity="left|bottom"
            android:src="@drawable/abc_ic_menu_selectall_mtrl_alpha" />

        <EditText
            android:layout_width="242dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_gravity="right|top"
            android:backgroundTint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:text="60" />

        <EditText
            android:layout_width="242dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText2"
            android:layout_gravity="right|bottom"
            android:backgroundTint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:text="8" />
    </FrameLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Navigate"
        android:id="@+id/btnNavi2"
        android:layout_gravity="right"
        android:onClick="btnNavigate" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:id="@+id/btnCloseNav"
        android:layout_gravity="right"
        android:onClick="btnCloseNavBar" />

</LinearLayout>