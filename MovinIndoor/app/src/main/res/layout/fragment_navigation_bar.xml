<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1"
    android:background="#CCCCCC"
    android:orientation="vertical">

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ff423fcc"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:rowCount="1"
        android:columnCount="13"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <ImageView
            android:layout_width="@dimen/abc_action_bar_progress_bar_size"
            android:layout_height="@dimen/abc_action_bar_progress_bar_size"
            android:id="@+id/imageView"
            android:src="@drawable/abc_btn_radio_to_on_mtrl_015"
            android:layout_row="0"
            android:layout_column="0" />

        <ImageView
            android:layout_width="@dimen/abc_action_bar_progress_bar_size"
            android:layout_height="@dimen/abc_action_bar_progress_bar_size"
            android:id="@+id/imageView3"
            android:src="@drawable/abc_ic_menu_selectall_mtrl_alpha"
            android:layout_row="0"
            android:layout_column="2" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:backgroundTint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:text="60"
            android:layout_row="0"
            android:layout_column="1" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText2"
            android:backgroundTint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:text="8"
            android:layout_row="0"
            android:layout_column="4" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Navigate"
            android:id="@+id/btnNavi2"
            android:layout_gravity="right"
            android:onClick="btnNavigate"
            android:layout_row="0"
            android:layout_column="8" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:id="@+id/btnCloseNav"
            android:layout_gravity="right"
            android:onClick="btnCloseNavBar"
            android:layout_row="0"
            android:layout_column="12" />
    </GridLayout>

    <ExpandableListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/expandableListView"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.01"
        android:layout_margin="10dp"
        android:background="#FFFFFF"
        android:choiceMode="singleChoice" />

</LinearLayout>