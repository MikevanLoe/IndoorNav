<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">


    <android.support.v4.widget.DrawerLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout">

    <!-- Framelayout to display Fragments -->


    <!-- <FrameLayout android:id="@+id/frame_container" android:layout_width="match_parent" android:layout_height="match_parent" > -->


    <fragment
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"/>

    <!-- </FrameLayout> -->


    <!-- The navigation drawer -->


    <ListView
        android:layout_height="match_parent"
        android:layout_width="300dp"
        android:id="@+id/drawer_list"
        android:textFilterEnabled="false"
        android:dividerHeight="1dp"
        android:divider="@android:color/transparent"
        android:choiceMode="singleChoice"
        android:background="#FFFFFF"
        android:layout_gravity="start"/>

</android.support.v4.widget.DrawerLayout>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="100dp"
        android:id="@+id/btnStart"
        android:background="#90FFFFFF"
        android:textAlignment="center"
        android:text="70"
        android:autoText="false"
        android:layout_marginRight="10dp"
        android:height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="100dp"
        android:id="@+id/btnEnd"
        android:background="#90FFFFFF"
        android:textAlignment="center"
        android:text="6"
        android:layout_marginRight="10dp"
        android:height="60dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/btnStart"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="60dp"
        android:id="@+id/btnNav"
        android:background="#90FFFFFF"
        android:text="Navigate"
        android:height="60dp"
        android:layout_toEndOf="@+id/btnEnd"
        android:clickable="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/btnEnd"
        style="?android:attr/buttonStyleSmall"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/TextSpeed"
        android:background="#FFFFFF"
        android:text="New Text"
        android:layout_alignEnd="@+id/btnNav"
        android:layout_alignParentBottom="true"/>


    <LinearLayout
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:id="@+id/linearLayout2"
        android:layout_gravity="bottom"
        android:layout_alignBottom="@+id/btnStart"
        android:orientation="horizontal">

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/UseButtonDialog"
        android:background="#ffffff"
        android:layout_gravity="top"
        android:height="14dp"
        android:clickable="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:paddingLeft="15dp"
        android:drawableLeft="@drawable/abc_btn_check_to_on_mtrl_000"
        android:textColor="#000000" android:textSize="15sp"> </Button>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:id="@+id/CancelButtonDialog"
        android:background="#ffffff"
        android:layout_gravity="top"
        android:text="Cancel"
        android:layout_marginRight="10dp"
        android:height="14dp"
        android:clickable="true"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textSize="15sp"
        android:onClick="btnNavigate"
        android:drawableRight="@drawable/ic_drawer"> </Button>

</LinearLayout>


    <FrameLayout
        android:layout_height="80dp"
        android:layout_width="fill_parent"
        android:id="@+id/Ooverlay"
        android:background="#FFFFFF"
        android:layout_alignBottom="@+id/TextSpeed"
        android:layout_centerHorizontal="true">

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/closeButton"
        android:layout_gravity="right|top"
        android:text="Close"
        android:onClick="btnClose"
        android:nestedScrollingEnabled="false"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/textView"
        android:layout_gravity="left|top"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/textView2"
        android:layout_gravity="left|center_vertical"
        android:text="Large Text"
        android:textColor="#ff0000"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

</FrameLayout>

</RelativeLayout>